<section class="container mt-5">
  <h2 class="text-center mb-5">Comprar por categorías</h2>
  <!--<h3>categorías principales</h3>-->
  <div class="container-list-categories">
    <% @categories.each do |category| %>
      <div class="item-category">
        <div class="container-img">
          <% if category.id <= 3 %>
            <%= image_tag("category#{category.id}.jpg") %>
          <% else %>
            <%= image_tag("category1.jpg") %>
          <% end %>
        </div>
        <p class="text-center">
          <%= link_to category.name, products_path(:query => category.name), method: :get %>
        </p>
      </div>
    <% end %>
  </div>
</section>
