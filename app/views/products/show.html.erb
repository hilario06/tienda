<div class="container">
  <!--<p><%= @product.title %></p>-->
  <div class="container-products-show">
    <div>
      <% if @product.id <= 5 %>
        <%= image_tag("product-a#{@product.id}.jpg") %>
      <% else %>
        <%= image_tag("product-a1.jpg") %>
      <% end %>
    </div>
    <div class="container-info-product">
      <h3>Accer Nitro-5 Laptop</h3>
      <p class="price-product">
        <span>$160.00</span>
        <span>$200.00</span>
      </p>
      <p class="description-product">Quot semper vivendo ad vix, qui ad diam lucilius repudiare.
      Autem voluptua ius id.
      Invenire antiopam qualisque ne per, ei vim legimus accusam, tale nulla vim ut
      </p>
      <form action="">
        <div class="quantity">
          <input type="number" min="1" step="1" name="" id="" size="4" value="1" autocomplete="off">
        </div>
        <button type="submit">Add to cart</button>
        <%= link_to edit_product_path(@product), class: 'edit' do %>
          <i class="far fa-edit"></i>
        <% end %>
        <%= link_to @product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete' do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </form>
      <p class="anadir-lista-product">
        <%= link_to product_likes_path(:product => @product), method: :post do %>
          <i class="fa fa-heart"></i> &nbsp;Añadir lista de deseos
        <% end %>
      </p>
      <p><span>SKU: </span> 10</p>
    </div>
  </div>
  <div class="container-reviews">
    <h6><span>Comentarios (0)</span></h6>
    <h6>Comentarios</h6>
    <p>Be The First To Review “Living Room Sofa And Interior”</p>
    <div class="write-reviews">
      <p><label>Your review *</label></p>
      <textarea></textarea>
      <input type="submit">
    </div>
  </div>
</div>
