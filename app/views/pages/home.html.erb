              <p class="my-4"><%= @products[0][2] %></p>
              <!--add_cart_from (1: home, 2: list products, 3: show products)-->
              <%= link_to 'Añadir al Carrito', shopping_cart_products_path(:quantity => 1, :product_id => @products[0][0], :add_cart_from => 1), method: :post %>
            </div>
          </div>
        </div>
      </div>
      <div class="carousel-item" data-bs-interval="2000">
        <div class="container-carousel-products">
          <div
            class="content-description"
