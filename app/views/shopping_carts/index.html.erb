<section class="container-shopping-carts">
  <% if @products.count == 0 %>
    <div class="container">
      <div class="container-empty-cart">
        <div class="content-img">
          <%= image_tag("empty-cart.png") %>
        </div>
        <p class="my-4">Su carrito está vacío.</p>
        <%= link_to 'volver a la tienda', products_path %>
      </div>
    </div>
  <% else %>

  <% end %>
</section>
